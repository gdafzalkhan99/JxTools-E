<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/recovery_tips_dialog_title"
            android:textColor="@color/color_title"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_cross_line" />

        <TextView
            android:id="@+id/rv_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center"
            android:text="免费体验1次照片修复服务"
            android:textColor="@color/color_content"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="活动说明：\n包含除人工修图以外的所有功能，不同的账号在同一台设备只能享受一次机会，以成功使用功能后计入有效活动次数为准，不影响已购买次数套餐服务的用户"
            android:textColor="@color/color_content"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_cross_line" />

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/recovery_tips_dialog_button"
            android:textColor="@color/color_content"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</FrameLayout>